{
  "name": "codymatch-backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "app.js",
  "imports": {
    "#root/*": "./*"
  },
  "scripts": {
    "start": "node app.js",
    "debug": "node --inspect=0.0.0.0:9230 app.js",
    "debug-brk": "node --inspect-brk=0.0.0.0:9230 app.js",
    "migrate": "node migrator.js db:migrate",
    "migrate-undo": "node migrator.js db:migrate:undo",
    "migrate-undo-all": "node migrator.js db:migrate:undo:all",
    "migration:new": "node scripts/create-migration.js",
    "lint": "eslint . --fix && prettier --write . && markdownlint --fix \"**/*.md\" --ignore node_modules",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.0",
    "cors": "^2.8.5",
    "cron": "^4.4.0",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "http-proxy": "^1.18.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "axios": "^1.13.2",
    "pg-boss": "^12.5.2",
    "rotating-file-stream": "^3.2.7",
    "sequelize": "^6.37.7",
    "supertest": "^7.1.4",
    "umzug": "^3.8.2",
    "node-cron": "^4.2.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.7.4",
    "sequelize-auto": "^0.8.8",
    "sequelize-cli": "^6.6.3",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.md": [
      "markdownlint --fix"
    ]
  }
}
