# Environment variable, should be development, test or production
ENVIRONMENT=development

# Docker compose project name
PROJECT_NAME=codymatch

# Database variables
DB_PORT=5431
DB_PASSWORD=codymatch

# Backend variables
URL=codymatch.test
DEBUG_PORT=9230
SECRET=please-change-this-secret-to-at-least-32-chars
REDIS_URL=redis://redis:6379
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend variables
VITE_API_REST_BASE=http://localhost:3001/api/rest
VITE_AUTH_API_BASE=http://localhost:3001

# Code runner image (defaults to Judge0 compilers)
CODE_RUNNER_IMAGE=judge0/compilers:latest

# Code execution queue (enabled by default, set to 'false' to disable)
# ENABLE_CODE_EXECUTION_QUEUE=false

# Code execution worker (enabled by default, set to 'false' to disable)
# ENABLE_CODE_EXECUTION_WORKER=false

# Code execution concurrency (number of jobs processed simultaneously)
# CODE_EXECUTION_CONCURRENCY=5

# Queue job retention (in hours)
# QUEUE_DELETE_AFTER_HOURS=0.25        # Delete completed jobs after 15 minutes (default)
# QUEUE_DELETE_ARCHIVED_HOURS=0.5      # Delete archived/failed jobs after 30 minutes (default)

# Queue retry settings
# QUEUE_RETRY_LIMIT=3                  # Number of retry attempts (default: 3)
# QUEUE_RETRY_DELAY=2000               # Delay between retries in milliseconds (default: 2000ms)
# QUEUE_RETRY_BACKOFF=false            # Enable exponential backoff (default: true, set to 'false' to disable)

# Run API polling settings
# RUN_API_MAX_WAIT_TIME=30000           # Maximum time to wait for job completion in milliseconds (default: 30000ms = 30 seconds)
# RUN_API_POLL_INTERVAL=500            # Interval between job status polls in milliseconds (default: 500ms)

# For development
BACKEND_FOLDER=../backend
FRONTEND_FOLDER=../frontend
