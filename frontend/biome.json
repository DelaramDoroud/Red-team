{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/biome.json",
      "!**/node_modules/**",
      "!**/.next/**",
      "!**/dist/**",
      "!**/coverage/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "a11y": {
        "noLabelWithoutControl": "error"
      },
      "correctness": {
        "noInvalidUseBeforeDeclaration": "error"
      },
      "style": {
        "noNestedTernary": "error",
        "noParameterAssign": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "error",
        "noConsole": "off"
      },
      "nursery": {
        "useDestructuring": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": [
        "**/*.test.js",
        "**/*.test.jsx",
        "**/*.spec.js",
        "**/*.spec.jsx"
      ],
      "linter": {
        "rules": {
          "nursery": {
            "useDestructuring": "off"
          }
        }
      },
      "javascript": {
        "globals": ["vi"]
      }
    }
  ]
}
